# Dockerfile for the ingestion-fetcher service
FROM python:3.10-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

ENV FLASK_APP=autobet.sports.gcp_ingest_service:app
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "--threads", "8", "--timeout", "0", "autobet.sports.gcp_ingest_service:app"]
# Dockerfile for the ingestion service (ingest-service)
FROM python:3.10-slim

WORKDIR /app

# Copy requirements from parent directory
COPY ../requirements.txt ./requirements.txt

# Suppress pip warnings and upgrade pip
ENV PIP_ROOT_USER_ACTION=ignore \
    PIP_DISABLE_PIP_VERSION_CHECK=1

RUN python -m pip install --no-cache-dir --upgrade pip \
    && python -m pip install --no-cache-dir -r requirements.txt

# Copy the sports module
COPY . ./sports/

# Set Python path
ENV PYTHONPATH=/app

# Set Flask app
ENV FLASK_APP=sports.gcp_ingest_service:app

# Use gunicorn for production
CMD ["gunicorn", "--bind", "0.0.0.0:8080", "--workers", "1", "--threads", "8", "--timeout", "0", "sports.gcp_ingest_service:app"]
